<UserControl x:Class="JeedomApp.Controls.ConnectDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="using:Template10.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:jeedom="using:Jeedom"
             xmlns:localcontrols="using:JeedomApp.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="using:JeedomApp.Views"
             xmlns:vm="using:JeedomApp.ViewModels"
             mc:Ignorable="d">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="120" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <TextBlock x:Name="tbTitle"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               Text="JeedomApp"
                               TextWrapping="Wrap" />
                    <TextBlock x:Uid="connection"
                               x:Name="tbSubtitle"
                               Margin="0,5,0,0"
                               HorizontalAlignment="Center"
                               Foreground="White"
                               RenderTransformOrigin="0.5,0.5"
                               Text="Connectez-vous à votre box domotique"
                               TextWrapping="Wrap" />
                    <Image x:Name="image"
                           Width="44"
                           Height="44"
                           Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5"
                           Source="ms-appx:///Assets/Square44x44Logo.png">
                        <Image.RenderTransform>
                            <CompositeTransform />
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
                <TextBlock x:Name="ErrorMsg"
                           Margin="5"
                           Foreground="Red"
                           Text="" />
                <localcontrols:ConnectControl Grid.Row="1" />
            </Grid>
        </ScrollViewer>
        <CommandBar VerticalAlignment="Bottom">
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton Icon="Sync"
                        Click="bConnect_Click"
                        Label="Connexion"/>
            <AppBarButton Icon="Camera" 
                    Click="QrCodeInfo_Click"
                    Label="Scan QR"/>
            <AppBarButton Icon="View" 
                    Click="Demo_Click"
                    Label="Demo"/>
        </CommandBar>

    </Grid>
</UserControl>